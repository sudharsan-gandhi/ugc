<body>
<div class="container">
<form class="form-horizontal" action="/user/create" method="POST">
 <input type="hidden" name="owner" value="<%- user.id%>" />
 
<fieldset>

<!-- Form Name -->
<legend>SIGN UP</legend>
<div class="form-group">
 <label  for="first_name">First Name</label>
 <div class=" ">
  <input type="text" name="firstname" maxlength="25" id="first_name" placeholder="Enter the first name" class="form-control">  
</div>
</div>

<div class="form-group">
 <label  for="middle_name">Middle Name</label>
 <div class=" ">
  <input type="text" name="middlename"  maxlength="25" id="middlename"  placeholder="Enter the middle name" class="form-control">
 </div>
 </div>

<div class="form-group">
 <label  for="last_name">Last Name</label>
 <div class=" ">
	<input type="text" name="lastname" maxlength="25" id="last_name"  placeholder="Enter the last name" class="form-control"> 
</div>
</div>


<div class="form-group">
	<label  for="email">Email</label>
	<div class=" ">
	<input type="text" name="email" maxlength="50" id="email"  placeholder="enter the email" class="form-control">  
</div>
</div>

<div class="form-group">
	<label  for="password">Password</label>
	<div class=" "> 
	<input type="password" name="password" maxlength="25" id="password"  placeholder="enter the password" class="form-control" >
</div>
</div>
	
<div class="form-group">
 <label  for="confirm_password">Confirm Password</label>
 <div class=" ">
  <input type="password" name="cpass" maxlength="25" id="confirm_password"  placeholder="Enter the confirm password" class="form-control">
</div>
</div>

<div class="form-group">

	<label  for="date_of_birth">DateOfBirth</label>
	<div class=" ">
	<input type="date"   name="date_of_birth" id="date_of_birth"  placeholder="Enter the data of birth" class="form-control">
</div>
</div>

<div class="form-group">	

	<label  for="address">Address</label>
	<div class=" ">
	<textarea style="resize:none" rows="4" cols="25" required="required"/>
</div>
</div>

